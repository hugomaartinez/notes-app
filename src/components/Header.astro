---
import { SignOut } from "auth-astro/components";
import { getSession } from "auth-astro/server";

const session = await getSession(Astro.request);

const navItems = [
  { href: "/", text: "Inicio" },
  { href: "/notes", text: "Notas" },
  { href: "/profile", text: "Perfil" },
];
---

<header class="bg-white shadow-md p-4">
  <div class="container mx-auto flex justify-between items-center">
    <a href="/" class="text-2xl font-bold">Notes App</a>
    <nav>
      <ul class="flex space-x-4">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-gray-700 font-semibold hover:text-black"
              >
                {item.text}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
    <div class="flex items-center space-x-4">
      {
        session ? (
          <p>Bienvenido/a, {session?.user?.name ?? "Invitado/a"}</p>
          <SignOut class="bg-red-500 px-4 py-2 text-white rounded-lg">Cerrar sesión</SignOut>
        ) : (
          <a href="/login" class="text-blue-500">Iniciar sesión</a>
        )
      }
    </div>
  </div>
</header>
