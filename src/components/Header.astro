---
import { SignOut } from "auth-astro/components";
import { getSession } from "auth-astro/server";

const session = await getSession(Astro.request);

const navItems = [
  { href: "/", text: "Inicio" },
  { href: "/notes", text: "Notas" },
  { href: "/profile", text: "Perfil" },
];
---

<header class="bg-white shadow-md p-4 flex items-center justify-between">
  <a href="/" class="text-2xl font-bold">Notes App</a>
  {/* Si no hay sesión, no se muestra el menú ni el botón para cerrar sesión*/}
  {
    session && (
      <nav>
      <ul class="flex space-x-4">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-gray-700 font-semibold hover:text-black"
              >
                {item.text}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
    <div class="flex items-center space-x-4">
      <SignOut class="bg-red-500 px-4 py-2 text-white rounded-lg">
        Cerrar sesión
      </SignOut>
    </div>
    )
  }
</header>
