---
const navItems = [
  { href: "/", text: "Inicio" },
  { href: "/notes", text: "Notas" },
  { href: "/profile", text: "Perfil" },
];
---

<header class="bg-white shadow-md p-4">
  <div class="container mx-auto flex justify-between items-center">
    <a href="/" class="text-2xl font-bold">Notes App</a>
    <nav>
      <ul class="flex space-x-4">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-gray-700 font-semibold hover:text-black"
              >
                {item.text}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>
