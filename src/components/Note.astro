---
import Button from "./Button.astro";
//const { note } = Astro.props;

const note = {
  title: "Sample Note",
  content: "This is an example of a note content.",
};
---

<div class="border border-gray-300 p-4 my-4 rounded-lg bg-gray-100">
  <div class="flex justify-between items-center">
    <h2 class="text-xl m-0">{note.title}</h2>
    <div class="flex gap-2">
      <Button color="bg-blue-500" text="white">Edit</Button>
      <Button color="bg-red-500" text="white">Delete</Button>
    </div>
  </div>
  <div class="my-4">
    <p>{note.content}</p>
  </div>
  <div class="flex gap-2">
    <Button color="bg-blue-500" text="white">Save</Button>
    <Button color="bg-gray-500" text="white">Cancel</Button>
  </div>
</div>
